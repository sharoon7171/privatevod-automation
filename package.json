{
  "name": "privatevod-automation",
  "version": "1.0.0",
  "description": "A minimal Chrome extension demo with popup and options pages only, following ultra-modular architecture standards.",
  "author": "SQ Tech",
  "homepage": "https://sqtech.dev",
  "license": "MIT",
  "type": "module",
  "main": "src/service-worker.mjs",
  "scripts": {
    "dev": "webpack --mode development --watch",
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "clean": "rimraf dist packages",
    "package": "npm run build && node scripts/build.mjs",
    "lint": "eslint src/**/*.mjs",
    "lint:fix": "eslint src/**/*.mjs --fix",
    "format": "prettier --write src/**/*.{mjs,json,html,css}",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "archiver": "^7.0.1",
    "babel-loader": "^9.1.3",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "css-minimizer-webpack-plugin": "^6.0.0",
    "eslint": "^8.52.0",
    "html-loader": "^5.1.0",
    "html-webpack-plugin": "^5.5.3",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "style-loader": "^3.3.3",
    "terser-webpack-plugin": "^5.3.9",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "chrome-extension",
    "manifest-v3",
    "privatevod",
    "automation",
    "ultra-modular"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/sqtech/privatevod-automation.git"
  },
  "bugs": {
    "url": "https://github.com/sqtech/privatevod-automation/issues"
  }
}
