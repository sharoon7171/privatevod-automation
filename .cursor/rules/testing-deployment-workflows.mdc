      with:
        file: ./coverage/lcov.info

    - name: Security audit
      run: npm run security-audit

    - name: Build extension
      run: npm run build

    - name: Run E2E tests
      run: |
        npx playwright install
        npm run test:e2e

  security:
    runs-on: ubuntu-latest
    steps:
    - uses: actions/checkout@v4
    
    - name: Run security scan
